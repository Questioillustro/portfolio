$icon-font-path ?= '/my-bootstrap-styl/fonts/';
@import 'bootstrap';

.react-autocomplete-Autocomplete {
	width: 100%;
	height: 34px;
	margin-bottom: 5px;
}

.react-autocomplete-Autocomplete__search {
	@extend .form-control;
}

.react-autocomplete-Results {
	width: 100%;
	height: 200px;
	overflow: scroll;	
}

.react-autocomplete-Result {
	@extend .list-group-item;
	cursor: pointer;
}

.react-autocomplete-Result a {
	color: black;
	text-decoration: none;
}

.react-autocomplete-Result--active a {
	color: white;
	text-decoration: none;
}

.react-autocomplete-Result--active {
	@extend .list-group-item.active;
}

.vf-well {
	@extend .well;
	margin-bottom: 0;
}

.vf-item {
	
}

button.vf-center-block {
	display: block;
	margin-top: 20px;
	margin-right: auto;
	margin-left: auto;
}

.vf-welcome {
	margin-bottom: 30px;
}

.vf-input-error {
	display: none;
	float: right;
}