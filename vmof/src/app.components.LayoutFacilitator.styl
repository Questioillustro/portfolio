@import 'bootstrap';

#vf-layout {
	width: 100%;
	height: 100%;
}

#send-alert-div {
	margin-top: 25px;
}

.vf-activity-cancel {
	float: left;
}

#send-alert-div {
	margin-bottom: 50px;
}

.app-header {
	background-color: #305782;
	padding: 30px 20px;
	color: #FFF;
}

.app-header h1 {
	margin: 0;
}

.nav-menu {
	// background-color: #e3e3e3;
	//background-color: white;
	//background-color: #df691a; // orange
	background-color: #4e5d6c;
}

.side-scroll {
	// background-color: #e3e3e3;
	background-color: #4e5d6c;
	font-size: 80%;
	height: 100px;
	overflow: auto;
}

.side-scroll-inner {
	padding: 20px;
}

/* Begin Main Structure */

.sidebar-one {
	width: 200px;
	position: absolute;
	left: 0;
	height: 500px;
	overflow: auto;
	z-index: 1000;
	-webkit-transition:left 1s ease;
	-moz-transition:left 1s ease;
	-o-transition:left 1s ease;
	transition:left 1s ease;
	// border-right: #ddd 1px solid;
	//border-right: 1px solid black; 
}

.main-content {
	position: absolute;
	// padding-top: 10%;
	left: 200px;
	right: 250px;
	height: 500px;
	overflow: auto;
	-webkit-transition:left 1s ease, right 1s ease;
	-moz-transition:left 1s ease, right 1s ease;
	-o-transition:left 1s ease, right 1s ease;
	transition:left 1s ease, right 1s ease;
}

#toolbar {
	// width: 200px;
	// height: 20px;
	position: absolute;
	height: 40px;
	// left: 0;
	// right: 0;
	left: 200px;
	right: 200px;
	bottom: 0;
	background-color: #f8f8f8;
	border-top: 1px solid #e8e8e8;
	// z-index: 1001;
	-webkit-transition:left 1s ease, right 1s ease;
	-moz-transition:left 1s ease, right 1s ease;
	-o-transition:left 1s ease, right 1s ease;
	transition:left 1s ease, right 1s ease;
}

.room {
	position: absolute;
	left: 0;
	right: 0;
}

.users {
	position: absolute;
	overflow: auto;
	height: 100px;
	// top: 40px;
	top: 38px;
	left: 0;
	right: 0;
	background-color: #4e5d6c;
	// border-left: 1px solid #ddd;
	// background-color: white; 
}

.sidebar-two {
	width: 250px;
	position: absolute;
	right: 0;
	height: 500px;
	overflow: auto;
	white-space: nowrap;
  	cursor: pointer;
  	user-select: none;
  	-webkit-user-select: none;
	-webkit-transition:width 1s ease;
	-moz-transition:width 1s ease;
	-o-transition:width 1s ease;
	transition:width 1s ease;
	//border-left: 1px solid black;
}

.main-content-inner {
	padding: 20px;
}

.buttons {
	width: 200px;
	font-size: 75%;
	font-weight: bold;
	text-align: center;
	background-color: #454545;
	position: absolute;
	bottom: 0;
}

.buttons-inner {
	padding: 10px;
}

.buttons a:link,
.buttons a:visited {
	display: inline-block;
	background-color: #305782;
	margin: 0 5px;
	color: #FFF;
	padding: 3px 11px;
	border: 1px solid #333;
	text-shadow: 1px 1px 0px #333;
	text-decoration: none;
}

.buttons a:hover {
	background-color: #436b96;
}

@media screen and (max-width: 767px) {
	#menu-toggle-left {
		display: block;
	}
    .sidebar-one {
		left: -200px;
    }
    .sidebar-two {
    	width: 0;
    	//border-left: none;
    }
    .main-content {
    	left: 0;
    	right: 0;
    }
    .sidebar-one.toggled {
		left: 0;
    }
    .sidebar-two.toggled {
    	width: 200px;
    	//border-left: 1px solid black;
    }
    #toolbar {
    	left: 0;
    	right: 0;
    }
}

